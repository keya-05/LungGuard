{
  "expo": {
    "name": "LungGuard",
    "slug": "lungguard",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow LungGuard to use your location to find nearby doctors specialized in respiratory care."
        }
      ]
    ],
    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.lungguard",
      
      
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "LungGuard needs your location to find nearby doctors specialized in respiratory care."
      }
    },
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourname.lungguard",
      
    
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    }
  }
}